{
  "title": "Total COVID-19 Cases as of 24th of September, 2021",
  "width": 1200,
  "height": 500,
  "data": {
    "url": "https://raw.githubusercontent.com/lehermschong/FIT3179Assignment2/main/data/worldmap.json",
    "format": {
          "type": "topojson",
          "feature": "worldmap.geo"
        }
  },
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "transform": [{
    "lookup": "properties.iso_a3",
    "from": {
      "data": {
        "url": "https://raw.githubusercontent.com/lehermschong/FIT3179Assignment2/main/data/owid-covid-data.csv"
      },
      "key": "iso_code",
      "fields": ["people_vaccinated_per_hundred","people_vaccinated"]
    }
  },
  {"calculate": "datum.people_vaccinated_per_hundred + 1", "as": "percentagevaxxedpaddedbyone"}
],
  "projection": {
    "type": "equirectangular"
  },
  "mark": {
    "type": "geoshape"
    },
  "encoding": {
    "color": {
      "condition": {"test": "datum.people_vaccinated_per_hundred <= 0 ", "value": "grey"},
      "field": "people_vaccinated_per_hundred",
      "type": "quantitative",
      "scale": {"type": "linear", "scheme": "redblue"}
    },
    "tooltip": [
      {"field": "properties.name", "type": "nominal", "title": "Country"},
      {"field": "people_vaccinated_per_hundred", "type": "quantitative","format":".2f","title": "Vaccinated Percentage"},
      {"field": "people_vaccinated", "type": "quantitative", "title": "People Vaccinated"}

    ]
  }
}
