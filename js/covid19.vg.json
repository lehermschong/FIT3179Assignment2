{
  "title": "Population Fully Vaccinated All Around the World",
  "width": 1200,
  "height": 500,
  "data": {
    "url": "https://raw.githubusercontent.com/lehermschong/FIT3179Assignment2/main/data/worldmap.json",
    "format": {
          "type": "topojson",
          "feature": "worldmap.geo"
        }
  },
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "transform": [{
    "lookup": "properties.iso_a3",
    "from": {
      "data": {
        "url": "https://raw.githubusercontent.com/owid/covid-19-data/master/public/data/latest/owid-covid-latest.csv"
      },
      "key": "iso_code",
      "fields": ["people_fully_vaccinated_per_hundred","people_fully_vaccinated"]
    }
  }
],
  "projection": {
    "type": "equirectangular"
  },
  "mark": {
    "type": "geoshape"
    },
  "encoding": {
    "color": {
      "condition": {"test": "datum.new_vaccinations_smoothed_per_million <= 0 ", "value": "grey"},
      "field": "people_fully_vaccinated_per_hundred",
      "type": "quantitative",
      "scale": {"type": "linear", "scheme": "redyellowgreen"}
    },
    "tooltip": [
      {"field": "properties.name", "type": "nominal", "title": "Country"},
      {"field": "people_fully_vaccinated_per_hundred", "type": "quantitative","format":".2f","title": "Fully Vaccinated Percentage"},
      {"field": "people_fully_vaccinated", "type": "quantitative", "title": "People Vaccinated"}

    ]
  }
}
