{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "COVID-19 Active Cases",
  "width": 1200,
  "height": 1000,
  "data": {
    "url": "https://raw.githubusercontent.com/trashcan99/FIT3179Assignment2/main/data/worldmap.json",
    "format": {
          "type": "topojson",
          "feature": "custom.geo (1)"
        }
  },
  "transform": [{
    "lookup": "properties.name",
    "from": {
      "data": {
        "url": "https://raw.githubusercontent.com/trashcan99/FIT3179Assignment2/main/data/owid-covid-latest.csv"
      },
      "key": "location",
      "fields": ["total_cases","total_cases_per_million","population"]
    }
  }
],
  "projection": {
    "type": "equirectangular"
  },
  "mark": {
    "type": "geoshape"
    },
  "encoding": {
    "color": {
      "condition": {"test": "datum.total_cases_per_million <=0 ", "value": "grey"},
      "field": "total_cases_per_million",
      "type": "quantitative",
      "scale": {"type": "log", "scheme": "reds"}
    },
    "tooltip": [
      {"field": "properties.name", "type": "nominal", "title": "Country"},
      {"field": "total_cases", "type": "quantitative"},
      {"field": "total_cases_per_million", "type":"quantitative","format": ".2f"}
    ]
  }
}
