{
  "width": 900,
  "height": 600,
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "description": "A bubbleplot showing horsepower on x, miles per gallons on y, and binned acceleration on size.",
  "data": {
    "url": "https://raw.githubusercontent.com/lehermschong/FIT3179Assignment2/main/data/owid-covid-data.csv"
  },
  "params": [{
      "name": "Population_Above",
      "value": 0,
      "bind": {
        "input": "range",
        "min": 0,
        "max": 100000000,
        "step": 1000000,
        "name": "Minimum Population: "
      }
    },
    {
      "name": "Continent_selection",
      "bind": {
        "input": "select",
        "options": [
          null,
          "North America",
          "South America",
          "Europe",
          "Africa",
          "Asia",
          "Oceania"
        ],
        "labels": [
          "Show All",
          "North America",
          "South America",
          "Europe",
          "Africa",
          "Asia",
          "Oceania"
        ],
        "name": "Continent Selection: "
      }
    }
  ],
  "transform": [{
      "filter": "datum.continent != ''"
    },
    {
      "filter": "datum.total_vaccinations > 0"
    },
    {
      "filter": "datum.total_deaths > 0"
    },
    {
      "filter": "Continent_selection == null || datum.continent == Continent_selection"
    },
    {
      "filter": "datum.population > Population_Above"
    }
  ],
  "encoding": {
    "x": {
      "field": "total_vaccinations",
      "type": "quantitative",
      "scale": {
        "type": "log",
        "domain": [10000, 10000000000]
      },
      "title": "Total Vaccinations",
      "axis": {
        "tickCount": 6
      }
    },
    "y": {
      "field": "total_deaths",
      "type": "quantitative",
      "scale": {
        "type": "log",
        "domain": [1, 1000000]
      },
      "title": "Total Deaths",
      "axis": {
        "tickCount": 6
      }
    }
  },
  "layer": [{
      "selection": {
        "continent_highlight": {
          "type": "multi",
          "fields": ["continent"],
          "bind": "legend"
        }
      },
      "mark": "circle",
      "encoding": {
        "size": {
          "field": "population",
          "type": "quantitative",
          "scale": {
            "type": "threshold",
            "domain": [10000000, 100000000, 300000000, 700000000, 800000000],
            "range": [100, 200, 400, 700, 900, 1200]
          },
          "format":",",
          "title": "Population",
          "legend":{"format":","}
        },
        "color": {
          "field": "continent",
          "type": "nominal",
          "scale": {
            "domain": ["North America", "South America", "Europe", "Africa", "Asia", "Oceania"],
            "range": ["#fa1100", "#fbad00", "#e9b9b9", "#b8e553", "#7d52ff", "#ff00eb"]
          },
          "title": "Continent",
          "legend":{"title":"Continent (click to highlight)","labelFontSize":15}
        },
        "opacity": {
          "condition": {
            "selection": "continent_highlight",
            "value": 1
          },
          "value": 0.2
        },
        "mark": {
          "type": "text",
          "align": "right",
          "baseline": "middle",
          "dx": -12,
          "fontSize": 11.5,
          "fontStyle": "italic"
        },
        "tooltip": [{
            "field": "location",
            "type": "nominal",
            "title": "Country"
          },
          {
            "field": "continent",
            "type": "nominal",
            "title": "Continent"
          },
          {
            "field": "population",
            "type": "quantitative",
            "format": ",",
            "title": "Population"
          },
          {
            "field": "total_vaccinations",
            "type": "quantitative",
            "format": ",",
            "title": "Total Vaccinations"
          },
          {
            "field": "total_deaths",
            "type": "quantitative",
            "format": ",",
            "title": "Total Deaths"
          }
        ]
      }
    },
    {
      "mark": {
        "type": "text",
        "align": "right",
        "baseline": "middle",
        "dx": -5,
        "fontSize": 11.5,
        "fontStyle": "italic"
      },
      "encoding": {
        "text": {
          "field": "location",
          "type": "nominal"
        },
        "color": {
          "value": "black"
        },
        "opacity": {
          "condition": {
            "test": "datum.location == 'China' || datum.location == 'Singapore' || datum.location == 'Australia' || datum.location == 'New Zealand' || datum.location == 'Malaysia' || datum.location == 'United Kingdom' ||  datum.location == 'United States'",
            "value": 1
          },
          "value": 0
        }
      }
    }
  ]
}