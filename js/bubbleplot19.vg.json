{
  "width": 900,
  "height": 600,
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "description": "A bubbleplot showing horsepower on x, miles per gallons on y, and binned acceleration on size.",
  "data": {
    "url": "https://raw.githubusercontent.com/lehermschong/FIT3179Assignment2/main/data/owid-covid-data.csv"
  },
  "params": [{
    "name": "Continent_selection",
    "bind": {
      "input": "select",
      "options": [
        null,
        "North America",
        "South America",
        "Europe",
        "Africa",
        "Asia",
        "Oceania"
      ],
      "labels": [
        "Show All",
        "North America",
        "South America",
        "Europe",
        "Africa",
        "Asia",
        "Oceania"
      ],
      "name": "Continent Selection: "
    }
  }],
  "transform": [{
      "filter": "datum.continent != ''"
    },
    {
      "filter": "datum.gdp_per_capita > 0"
    },
    {
      "filter": "datum.total_cases_per_million > 0"
    },
    {
      "filter": "Continent_selection == null || datum.continent == Continent_selection"
    }
  ],
  "encoding": {
    "x": {
      "field": "total_cases_per_million",
      "type": "quantitative",
      "scale": {
        "domain": [0, 240000],
        "type": "sqrt"
      },
      "title": "Total Cases per Million"
    },
    "y": {
      "field": "gdp_per_capita",
      "type": "quantitative",
      "scale": {
        "type": "linear",
        "domain": [500, 120000]
      },
      "title": "GDP per Capita"
    }
  },
  "layer": [{
      "selection": {
        "continent_highlight": {
          "type": "multi",
          "fields": ["continent"],
          "bind": "legend"
        }
      },
      "mark": "circle",
      "encoding": {
        "size": {
          "field": "total_deaths_per_million",
          "type": "quantitative",
          "scale": {
            "type": "linear",
            "domain": [200, 400, 600, 800, 1000],
            "range": [200, 300, 400, 500, 600]
          },
          "title": "Total Deaths per Million"
        },
        "color": {
          "field": "continent",
          "type": "nominal",
          "scale": {
            "domain": ["North America", "South America", "Europe", "Africa", "Asia", "Oceania"],
            "range": ["#fa1100", "#fbad00", "#e9b9b9", "#b8e553", "#7d52ff", "#ff00eb"]
          },
          "title": "Continent"
        },
        "opacity": {
          "condition": {
            "selection": "continent_highlight",
            "value": 0.8
          },
          "value": 0.2
        },
        "mark": {
          "type": "text",
          "align": "right",
          "baseline": "middle",
          "dx": -12,
          "fontSize": 11.5,
          "fontStyle": "italic"
        },
        "tooltip": [{
            "field": "location",
            "type": "nominal"
          },
          {
            "field": "continent",
            "type": "nominal"
          },
          {
            "field": "gdp_per_capita",
            "type": "quantitative",
            "format": ","
          },
          {
            "field": "total_cases_per_million",
            "type": "quantitative",
            "format": ","
          },
          {
            "field": "total_deaths_per_million",
            "type": "quantitative",
            "format": ","
          }
        ]

      }
    },
    {
      "mark": {
        "type": "text",
        "align": "right",
        "baseline": "middle",
        "dx": -12,
        "fontSize": 11.5,
        "fontStyle": "italic"
      },
      "encoding": {
        "text": {
          "field": "location",
          "type": "nominal"
        },
        "color": {
          "value": "black"
        },
        "opacity": {
          "condition": {
            "test": "datum.location == 'China' || datum.location == 'Singapore' || datum.location == 'Australia' || datum.location == 'New Zealand' || datum.location == 'Malaysia' || datum.location == 'United Kingdom' ||  datum.location == 'United States'",
            "value": 1
          },
          "value": 0
        },
        "tooltip": [{
            "field": "location",
            "type": "nominal"
          },
          {
            "field": "continent",
            "type": "nominal"
          },
          {
            "field": "gdp_per_capita",
            "type": "quantitative",
            "format": ","
          },
          {
            "field": "total_cases_per_million",
            "type": "quantitative",
            "format": ","
          },
          {
            "field": "total_deaths_per_million",
            "type": "quantitative",
            "format": ","
          }
        ]
      }
    }
  ]
}